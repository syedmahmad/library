{
    "compilerOptions": {
      "outDir": "dist/esm",
      "module": "es2015",
      // "module": "es6",
      "target": "es6",
      "lib": ["es5", "es6", "dom", "es2015", "es2016", "es2017", "ESNext"],
      "jsx": "react",
      "declaration": true, // allows us to create our types files.
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true, // fix compiling issues of diff versions.
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true, // can also use import * as react from 'react';
      "allowJs": true
    },
    "include": ["src/**/*/ts", "src/**/*.tsx", "src/index.ts"],
    "exclude": ["node_modules", "lib"]
  }